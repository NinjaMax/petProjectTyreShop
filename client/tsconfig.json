{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "module": "esnext",
    "typeRoots": [
      "@types",
      "@types/react",
      "node_modules/@types",
      "src/types"
    ],
    "target": "es5",
    "allowJs": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
  },

  "exclude": [
    "node_modules",
    "dist",
    "assets",
    ".git"
   ],  
  "files": [
    "src/index.tsx"
  ],
  "include": [
    "src",
    "src/**/*",
    "src/index.d.ts",
    //"img_custome.d.ts"
  ]
}
