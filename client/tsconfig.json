{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "jsxFactory": "",
    "jsxFragmentFactory": "",
    "reactNamespace": "",
    "module": "esnext",
    "typeRoots": [
      "@types",
      "node_modules/@types",
      "src/types"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "assets",
    ".git"
  ],
  "include": [
    "src",
    "src/**/*",
    "src/index.d.ts"
  ]
}
